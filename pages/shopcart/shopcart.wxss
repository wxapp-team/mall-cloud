/* shopcart.wxss */

page {
    background: #f5f5f5;
}

.page-section {
    font-size: 28rpx;
    background: #f5f5f5;
    height: 100%;
}

.bg-wihte {
    background: #fff;
}

.shopcart-t {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 2;
    padding: 0 24rpx;
    font-size: 32rpx;
    border-top: 1rpx solid #f0f0f0;
    border-bottom: 1rpx solid #f0f0f0;
    overflow: hidden;
    height: 88rpx;
    line-height: 88rpx;
}

.shopcart-t view {
    font-size: 32rpx;
}

.shopcart-ck {
    float: left;
    overflow: hidden;
    margin-right: 16rpx;
    margin-top: 40rpx;
}

.shopcart-edite {
    float: right;
    overflow: hidden;
}

.shopcart-item-num {
    overflow: hidden;
    font-size: 28rpx;
    text-align: right;
    line-height: 1;
    margin-top: -1rpx;
}

.shopcart-item-num text {
    margin-right: 8rpx;
    font-size: 28rpx;
    color: #212121;
}

.shopcart-m {
    overflow: hidden;
    margin: 90rpx 0 140rpx 0;
}

.cart-item {
    margin-top: 24rpx;
}

.shopTitle {
    font-size: 32rpx;
    padding: 0 24rpx;
    border-bottom: 1rpx solid #f0f0f0;
    overflow: hidden;
    height: 88rpx;
    line-height: 88rpx;
}

.shopTitle .iconfont {
    width: 32rpx;
    height: 18rpx;
    float: left;
    font-size: 32rpx;
    margin-right: 8rpx;
}

.shopTitle .iconfont.icon-arrow_right{
    float: right;
    color: #747474;
}

.shopTitle icon {
    float: left;
    line-height: 1;
    margin-top: 20rpx;
    margin-right: 12px;
}

.shopcart-m-item {
    overflow: hidden;
    width: 702rpx;
    padding: 32rpx 24rpx;
    position: relative;
    display: flex;
    flex-direction: row;
    z-index: 1;
}

.shopcart-m-item:not(:last-child):after {
    content: '';
    position: absolute;
    bottom: 0;
    right: 0;
    width: 665rpx;
    border-bottom: 1rpx solid #f0f0f0;
}

.shopcart-item-pic {
    width: 128rpx;
    height: 128rpx;
    float: left;
    border: 1rpx solid #f0f0f0;
    margin-right: 16rpx;
}

.shopcart-item-pic image {
    width: 128rpx;
    height: 128rpx;
    overflow: hidden;
}

.shopcart-txt-t {
    overflow: hidden;
    height: 72rpx;
}

.shpcart-item-txt {
    float: left;
    overflow: hidden;
    z-index: 1;
    flex: 1;
}

.shopcart-txt-name {
    float: left;
    width: 320rpx;
    height: 72rpx;
    line-height: 36rpx;
    overflow: hidden;
    font-size: 28rpx;
}

.shopcart-txt-saleprice {
    float: right;
}

.shopcart-txt-b {
    margin-top: 16rpx;
    overflow: hidden;
}

.shpcart-item-skuname {
    float: left;
    overflow: hidden;
    color: #747474;
}

.shopcart-invalid view{
    opacity: 0.7;
}

.shopcart-invalid .ck-txt {
    color: #fb1438;
    opacity: 1;
    font-size: 20rpx;
    margin-left: -12rpx;
}

.shopcart-b {
    position: fixed;
    z-index: 2;
    bottom: 0rpx;
    width: 100%;
    height: 96rpx;
    line-height: 96rpx;
    border-top: 1rpx solid #f0f0f0;
}

.shopcart-total {
    float: left;
    color: #424242;
    font-size: 28rpx;
}

.shopcart-total-txt {
    padding: 0rpx 10rpx 0rpx 24rpx;
    float: left;
}

.shopcart-total-p {
    color: #fb1438;
    float: left;
}

.shopcart-total-p .saleprice {
    font-weight: bold;
    font-family: Arial;
    font-size: 32rpx;
    margin: 0 16rpx;
    vertical-align: middle;
}

.shopcart-buy {
    float: right;
    color: #fff;
    background: #fb1438;
    text-align: center;
    font-size: 36rpx;
    width: 185rpx;
}

.shopcart-item-edite-l {
    float: left;
    overflow: hidden;
    margin-right: 15rpx;
}

.shopcart-item-edite-r {
    width: 120rpx;
    overflow: hidden;
    height: 100%;
    line-height: 194rpx;
    position: absolute;
    right: 0rpx;
    top: 0;
    z-index: 999;
    bottom: 1rpx;
    text-align: center;
    color: #fb1438;
    box-sizing: border-box;
}

.shopcart-item-edite-r .iconfont {
    font-size: 48rpx;
}

.shpcart-item-edite-num {
    margin-bottom: 15rpx;
    height: 72rpx;
    line-height: 72rpx;
    overflow: hidden;
    text-align: center;
}

.shpcart-item-edite-num .musenum-l, .shpcart-item-edite-num .add-r {
    padding: 0 15rpx;
    color: #9e9e9e;
    font-size: 24px;
}

.shpcart-item-edite-num .plus_regular, .shpcart-item-edite-num .minus_regular {
    padding: 0 15rpx;
    color: #9e9e9e;
    font-size: 24px;
    overflow: hidden;
}

.shpcart-item-edite-num .musenum-l {
    float: left;
    overflow: hidden;
}

.shpcart-item-edite-num .m {
    float: left;
    overflow: hidden;
    text-align: center;
    width: 210rpx;
    height: 72rpx;
    line-height: 72rpx;
    font-size: 36rpx;
    color: #212121;
}

.shpcart-item-edite-num .add-r {
    float: right;
    overflow: hidden;
}

.shopcart-no {
    width: 100%;
    display: flex;
    background: #fff;
    text-align: center;
    position: fixed;
    top: 0;
    bottom: 0;
}

.shopcart-no image {
    width: 192rpx;
    height: 192rpx;
    margin: 0 auto;
}

.shopcart-no .shopcart-no-item {
    margin: 144rpx auto;
}

.shopcart-no-item .btn_go {
    background: #fb1438;
    color: #fff;
    border-radius: 4px;
    width: 144rpx;
    height: 65rpx;
    font-size: 28rpx;
    margin: auto;
    line-height: 65rpx;
}
.store-ul{
    padding: 24rpx;
    position: relative;
}

.store-ul .item{
    margin-right: 24rpx;
    display: inline-block;
}
.store-ul .price{
    color: #fb1438;
    line-height: 48rpx;
    text-align: center;
    font-size: 24rpx;
}
.store-ul image{
    width: 110rpx;
    height: 110rpx;
}

.store-ul .disabled-pic{
    position: absolute;
    background: rgba(0,0,0,.5);
    color: #fff;
    width: 110rpx;
    height: 110rpx;
    text-align: center;
    line-height: 110rpx;
    font-size:24rpx;
}

.more-pro{
    float: right;
    line-height: 110rpx;
    vertical-align: top;
    font-size: 24rpx;
}
.more-pro .iconfont{
    font-size: 48rpx;
    margin-right:24rpx;
    vertical-align:middle;
}
