/* ApplyRefund.wxss */

page {
  background: #f5f5f5;
}

.page-section {
  margin-top: 24rpx;
  overflow: hidden;
  position:relative;
}
 
 .line {
   position: relative;
 } 
 .line wx-view{
   position: absolute;
   border-bottom: 1rpx solid #f0f0f0;
   top: -1rpx;
   left: 0rpx;
   right: 0rpx;
 }

.form-group {
  padding:24rpx;
  font-size: 32rpx;
  line-height: 48rpx;
  overflow: hidden;
  display:flex;
  position:relative;
  color: #212121;
}

.beizhu{
  padding: 24rpx 24rpx 8rpx 24rpx;
  font-size: 32rpx;
  line-height: 48rpx;
  overflow: hidden;
  display:flex;
  position:relative;
  color: #212121;
  border-bottom: 1rpx solid #e0e0e0; 
  }

.beizhu .form-group-name {
  color: #747474;
  font-size: 28rpx;
  line-height: 40rpx;
}

.beizhu .group-area{padding:6rpx 0 10rpx 0; font-size: 32rpx; line-height: 40rpx; color: #212121; width: 100%;height:76rpx;}
.beizhu .group-area:-moz-placeholder{ color: #bdbdbd;}

.form-group:not(:last-child):after{
  content: '';
  position: absolute;
  bottom:0;
  right:0;
  width: 726rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

 
 
.form-group-name {
  margin-right: 16rpx;
  width:160rpx;
  overflow:hidden;
}

.form-group-input input {
width:510rpx;
}
 
.form-group .selecttxt{
  color:#bdbdbd;
}

.come-icon {
  font-size: 13px;
  right:24rpx;
  position:absolute;
  color: #9e9e9e;
}

.btn {
  width: 702rpx;
  margin: 0 auto;
  overflow: hidden;
  text-align: center;
}

.submit {
  color: #fff;
  width: 100%;
  border-radius: 8rpx;
  margin: 48rpx 0;
  font-size: 36rpx;
  line-height: 48rpx;
  padding: 24rpx 0;
  background: #fb1438;
  border:none;
}

.cancel {
  color: #424242;
  background: #FBFAFC;
  border-radius: 8rpx;
  margin-top: 24rpx;
  font-size: 36rpx;
  line-height: 48rpx;
  padding: 24rpx 0;
  border:1rpx solid #D6D5D6;

}

.showdiaolg{position:absolute;bottom:0rpx;width:100%;background:#fff;text-align:center;overflow:hidden;}
.showdiaolg view{border-bottom:1rpx solid #d6d5d6;height:75rpx;line-height:75rpx;}
.showdiaolg view:last{border-bottom:0}

.virtual{
    background: #fff;
    margin-top: 24rpx;
    padding: 24rpx 0;
}
.check-info {
    line-height: 40rpx;
    padding: 0 0 20rpx;
    position: relative;
    margin: 0 24rpx;
    border-bottom: 1rpx solid #f0f0f0;
}

.check-info .h3 {
    font-size: 28rpx;
    color: #212121;
}

.check-info .p {
    font-size: 24rpx;
    color: #747474;
}

.check-info .refundApply {
    position: absolute;
    top: 8rpx;
    right: 0;
    border-radius: 32rpx;
    padding: 10rpx 32rpx;
    border-color: #333;
    border: 1rpx solid #eee;
}

.check-qrcode {
    padding: 0 24rpx;
}

.check-qrcode .item {
    color: #212121;
    padding: 24rpx 0;
    border-bottom: 1rpx dashed #f7f7f7;
}

.check-qrcode .item icon {
    margin-right: 16rpx;
    vertical-align: middle;
}

.check-qrcode .item .span {
    margin-left: 48rpx;
}

.check-qrcode .pull-right {
    float: right;
}
