/* pages/userasset/userasset.wxss */
page{
    background:#f0f0f0;
}
view,scroll-view{
    box-sizing: border-box;
}
.asset-total{
    color: #fff;
    background: #fb1438;
    text-align: center;
}
.asset-total .h3{
    line-height: 80rpx;
    font-size: 64rpx;
}
.asset-total .h3 view{
    display: inline-block;
    font-size: 36rpx;
}
.asset-total .p{
    font-size: 32rpx;
    padding: 8rpx 0 24rpx;
    line-height: 48rpx;
}
.asset-addup{
    padding: 24rpx;
    background: #ff4763;
    text-align: center;
    color: #fff;
}
.asset-addup .item{
    display: inline-block;
    width: 33.3333%;
}
.asset-addup .item+.item{
    border-left: 1rpx solid #ff7f92;
}
.asset-addup .item .h3{
    font-size: 36rpx;
    line-height: 48rpx;
}
.asset-addup .item .h3 view{
    display: inline;
    font-size: 28rpx;
}
.asset-addup .item .p{
    font-size: 24rpx;
    line-height: 32rpx;
}
.asset-list{
    margin-top: 24rpx;
    background: #fff;
    padding-left: 24rpx;
    margin-bottom: 100rpx;
}
.isEnd{
    margin-bottom: 180rpx;
    position: relative;
}
.asset-list .item{
    padding: 24rpx 24rpx 24rpx 0;
    border-bottom: 1rpx solid #f0f0f0;
    position: relative;
}
.asset-list .item .desc{
    line-height: 48rpx;
    font-size: 28rpx;
    width:85%;
}
.asset-list .item .desc view{
    font-size: 28rpx;
    display: inline;
}
.asset-list .item .time{
    line-height: 40rpx;
    color: #bdbdbd;
    font-size: 24rpx;
}
.asset-list .item .price{
    position:absolute;
    line-height:88rpx;
    font-size:32rpx;
    top:50%;
    right:24rpx;
    color:#212121;
    font-weight:bold;
    margin-top:-44rpx;
}
.asset-list .item .price.out{
    color: #fb1438;
}

.asset-bot{
    position: fixed;
    bottom: 0;
    width: 100%;
    padding: 24rpx;
    background: #fff;
    line-height: 48rpx;
    border-top: 1rpx solid #f0f0f0;
    display: flex;
}
.asset-bot view{
    flex: 1;
    display: inline-block;
    text-align: center;
}
.asset-bot view+view{
    border-left: 1rpx solid #e0e0e0;
}
.recharge{
    color: #fb1438;
}