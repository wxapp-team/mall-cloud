/* pages/grouporderdetail/grouporderdetail.wxss */

view, scroll-view {
    box-sizing: border-box;
}

.merge-personal {
    padding-bottom: 0;
}

.merge-personal .list {
    position: relative;
    margin-bottom: 24rpx;
}

.merge-personal .list:last-child {
    margin-bottom: 0;
}

.merge-personal-hd {
    display: -webkit-box;
    display: -moz-box;
    display: -ms-flexbox;
    display: -webkit-flex;
    display: flex;
    padding: 24rpx;
    background-color: #fff;
}

.merge-personal-hd .thumb {
    position: relative;
    width: 140rpx;
    height: 140rpx;
    overflow: hidden;
    background-color: #f5f7f6;
}

.merge-personal-hd .thumb image {
    height: 100%;
    width: 100%;
}

.merge-personal-hd .info {
    -webkit-box-flex: 1;
    -moz-box-flex: 1;
    -ms-flex: 1;
    -webkit-flex: 1;
    flex: 1;
    margin-left: 16rpx;
}

.merge-personal-hd .name {
    display: -webkit-box;
    display: -moz-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    margin: 0 0 24rpx;
    font-size: 26rpx;
    line-height: 32rpx;
    color: #030e21;
    overflow: hidden;
    text-overflow: ellipsis;
}

.merge-personal-hd .price {
    margin-bottom: 24rpx;
    font-size: 22rpx;
    color: #343434;
}

.merge-personal-hd .price view {
    font-weight: bold;
    font-size: 24rpx;
    color: #fb1438;
    display: inline-block;
}

.merge-personal-hd .price .unit {
    font-size: 18rpx;
    margin-left: 16rpx;
}

.merge-personal-hd .time {
    font-size: 22rpx;
    color: #9a9a9a;
}

.personal-list-bd .avatar-group .user:first-child:before,.merge-personal-go .user .info:first-child .avatar:before, .merge-over-sign,.merge-fail-sign, .merge-success-sign {
    background: url(http://demo.himall.kuaidiantong.cn/Areas/Mobile/Templates/Default/images/merge.png) no-repeat;
    background-size: 640rpx 440rpx;
}

.merge-personal-hd .time > view {
    position: relative;
    margin-right: 24rpx;
    color: #323943;
    display: inline-block;
}

.merge-personal-hd .time .iconfont{
    font-size: 26rpx;
    margin-right: 8rpx;
}


.detail-bd {
    position: relative;
    z-index: 1;
    padding-bottom:160rpx;
}

.merge-personal-go {
    padding: 0 24rpx;
    background-color: #fff;
}
.merge-personal-go .user{
    margin-top: 16rpx;
}
.merge-personal-go .user .info {
    padding-bottom: 20rpx;
}

.merge-personal-go .user view {
    display: inline-block;
}

.merge-personal-go .user:last-of-type {
    border-bottom: 0 none;
}

.merge-personal-go .info {
    width: 100%;
}

.merge-personal-go .info .avatar {
    position: relative;
    width: 80rpx;
    height: 80rpx;
    border: 3rpx solid transparent;
    vertical-align: middle;
    border-radius: 100%;
}

.merge-personal-go .user .info:first-child .avatar {
    border-color: #ffc015;
}

.merge-personal-go .user .info:first-child .avatar:before {
    position: absolute;
    top: -22rpx;
    left: 20rpx;
    width: 48rpx;
    height: 26rpx;
    content: '';
    background-position: -150rpx -348rpx;
}

.merge-personal-go .info .avatar image {
    width: 100%;
    height: 100%;
    border-radius: 100%;
}

.merge-personal-go .info .leader {
    height: 30rpx;
    padding: 0 16rpx;
    margin: 0 26rpx 0 16rpx;
    font-size: 20rpx;
    line-height: 30rpx;
    color: #fff;
    background-color: #fcc41b;
    border-radius: 16rpx;
    position: relative;
    top: -4rpx;
}

.merge-personal-go .info .name {
    padding-right: 24rpx;
    font-size: 24rpx;
    color: #494e52;
}

.merge-personal-go .info .time {
    font-size: 24rpx;
    color: #bbb;
    float: right;
    margin-top: 16rpx;
}

.merge-rule {
    padding: 28rpx 24rpx;
    font-size: 26rpx;
    line-height: 36rpx;
    color: #6b6c6e;
    background-color: #f9f9f9;
}

.merge-go-tip, .merge-do-tip {
    padding: 30rpx 0 24rpx;
    font-size: 26rpx;
    font-weight: bold;
    color: #494e52;
    letter-spacing: 1rpx;
}

.merge-go-tip view {
    display: inline-block;
}
.merge-go-tip .merge-highlight{
    color: #3cbcba;
    margin: 0 8rpx;
}

.merge-over-sign, .merge-fail-sign, .merge-success-sign {
    position: absolute;
    z-index: 1;
    width: 192rpx;
    height: 192rpx;
    top: 32rpx;
    right: 32rpx;
}

.merge-over-sign {
    background-position: -320rpx 0;
}

.merge-fail-sign {
    background-position: -8rpx 0;
}

.merge-success-sign {
    background-position: -450rpx 0;
}
.detail-comment{
    padding: 28rpx 24rpx;
    background: #fff;
    line-height: 30rpx;
    font-size: 28rpx;
    color: #2a2a2e;
}
.detail-comment .sub{
    display: inline-block;
    color: #bbb;
    margin-left: 12rpx;
}
.detail-comment .iconfont{
    font-size: 28rpx;
    float: right;
    color: #d1d1d1;
}

.productxq{
    background: #fff;
    margin-top: 24rpx;
}

.xqcont {
    font-size: 28rpx;
    overflow: hidden;
    padding: 24rpx;
}
