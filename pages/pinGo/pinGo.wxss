
view, scroll-view {
    box-sizing: border-box;
}
.pinGo-banner {
    width: 100%;
    height: 280rpx;
    overflow: hidden;
}

.pinGo-banner image {
    display: inline;
}



.pingo-list {
    width:100%;
    height: 100%;
    padding: 10px 10px;
    overflow-y: scroll;
    }

.pingo {
  width: 100%;
  box-sizing: border-box;
    padding: 20rpx 20rpx 20rpx 20rpx;
    margin: 10rpx 0rpx;
    overflow: hidden;
}

.pingo .info {
    display: flex;
    flex-direction: row;
}

.pingo-info-pic {
    float: left;
    width: 164rpx;
    height: 164rpx;
    overflow: hidden;
}

.pingo-info-pic image {
    width: 164rpx;
    height: 164rpx;
}

.countdow-info-txt {
    float: right;
    overflow: hidden;
    margin-left: 16rpx;
    flex: 1;
}

.countdow-info-name {
    height: 80rpx;
    line-height: 40rpx;
    display: inline-block;
    word-break: break-all;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.countdow-info-b {
    margin-top: 8rpx;
    overflow: hidden;
    height: 56rpx;
}

.saleprice {
    float: left;
    color: #fb1438; 
}

.saleprice .price {
    display: inline-block;
    font-size: 28rpx;
}

.saleprice .price text {
    font-size: 32rpx;
}

.saleprice .oldprice {
    display: inline-block;
    font-size: 24rpx;
    color: #bdbdbd;
    font-weight: 0;
    text-decoration: line-through;
    margin-left: 14rpx;
    vertical-align: bottom;
}

.pingo-btn {
    float: right;
    width: 160rpx;
    height: 56rpx;
    text-align: center;
    line-height: 56rpx;
    color: #fff;
    background: -webkit-linear-gradient(left, #fb1438, #f33); /* Safari 5.1 - 6.0 */
    background: -o-linear-gradient(right, #fb1438, #f33); /* Opera 11.1 - 12.0 */
    background: -moz-linear-gradient(right, #fb1438, #f33); /* Firefox 3.6 - 15 */
    background: linear-gradient(to right, #fb1438, #f33);
}

.countdow-start {
    background: -webkit-linear-gradient(left, #03a9f4, #0288d1); /* Safari 5.1 - 6.0 */
    background: -o-linear-gradient(right, #03a9f4, #0288d1); /* Opera 11.1 - 12.0 */
    background: -moz-linear-gradient(right, #03a9f4, #0288d1); /* Firefox 3.6 - 15 */
    background: linear-gradient(to right, #03a9f4, #0288d1);
}
.my-pin-triger{
  position: fixed;

  z-index: 9999;
  bottom: 50px;right:-20rpx;
}
.my-pin-triger>image{
   width: 166rpx;
  height: 141rpx;
}