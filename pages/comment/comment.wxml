<!--pages/comment/comment.wxml-->
<form bindsubmit="formSubmit" report-submit="false">
    <view class='wrap'>
        <block wx:for="{{ProductList}}">
            <view class="comentcont">
                <view class="comenttiltetop">
                    <view class="comenttilte">
                        <view class="comtiltepic">
                            <image mode='aspectFit' src="{{item.Image}}"></image>
                        </view>
                        <view class="comtright">
                            <view class="comtrightop">评分</view>
                            <view class="comtrightcout">
                                <text wx:for="{{scoreArr}}" wx:for-index="i" class="iconfont icon-star {{ScoreGrade[index].mark>i?'':'icon-color'}}" bindtap="ScoreGrade" data-grade="{{i+1}}" data-index="{{index}}"></text>
                            </view>
                        </view>
                    </view>
                </view>
                <view class="comenttext">
                    <textarea class="txtarea" name="txt_{{item.OrderItemId}}" placeholder="请输入对此商品的评价" />
                </view>
                <view class="comentpic">
                    <view class="uploadImg">
                        <view class="upload-item" wx:for="{{ScoreGrade[index].Images}}" wx:for-item="img" wx:for-index="imgindex">
                            <image src="{{getRequestUrl}}{{img}}"  bindtap="uploadImg" data-index="{{index}}" data-imgindex="{{imgindex}}" mode="aspectFill"></image>
                            <text bindtap="delImg" class="iconfont icon-clear" data-index="{{index}}" data-imgindex="{{imgindex}}"></text>
                        </view>
                        <view class="upload-btn iconfont icon-camera" bindtap="uploadImg" data-index="{{index}}"></view>
                    </view>
                </view>
            </view>
        </block>
        <view class='commentstore'>
            <view class='title'>店铺评分</view>
            <view class='line'>
                <view class='name'>商品描述</view>
                <view class="comtrightcout">
                    <text wx:for="{{scoreArr}}" wx:for-index="i" class="iconfont icon-star {{packMark>i?'':'icon-color'}}" bindtap="packGrade" data-grade="{{i+1}}"></text>
                </view>
            </view>
            <view class='line' wx:if="{{!isVirtual}}">
                <view class='name'>物流服务</view>
                <view class="comtrightcout">
                    <text wx:for="{{scoreArr}}" wx:for-index="i" class="iconfont icon-star {{deliveryMark>i?'':'icon-color'}}" bindtap="deliveryGrade" data-grade="{{i+1}}"></text>
                </view>
            </view>
            <view class='line'>
                <view class='name'>服务态度</view>
                <view class="comtrightcout">
                    <text wx:for="{{scoreArr}}" wx:for-index="i" class="iconfont icon-star {{serviceMark>i?'':'icon-color'}}" bindtap="serviceGrade" data-grade="{{i+1}}"></text>
                </view>
            </view>
        </view>
    </view>
    <view class="comment-btn">
        <button form-type="submit" class="baseRedBgColor btn-confirm">提交评论</button>
    </view>

</form>