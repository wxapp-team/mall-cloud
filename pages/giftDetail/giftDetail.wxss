@import "../wxParse/wxParse.wxss";

swiper {
  height: 750rpx;
}

.content {
  padding: 0 0 96rpx;
  box-sizing: border-box;
  background: #fff;
}

.content>view{
  padding: 0 24rpx;
}

.title {
  font-size: 36rpx;
  line-height: 48rpx;
  margin-top: 16rpx;
  color: #212121;
  max-height: 96rpx;
}

.integal {
  line-height: 64rpx;
  margin-top: 8rpx;
  color: #fb1438;
}

.integal .integal_num {
  font-size: 48rpx;
  font-weight: bold;
}

.integal .jifen {
  font-size: 30rpx;
  margin: 0 30rpx;
}

.integal .price {
  margin: 0 30rpx;
  font-size: 28rpx;
  color: #bdbdbd;
}

.integal .grade {
  font-size: 24rpx;
  color: #fff;
  background-color: #fb1438;
  height: 32rpx;
  line-height: 32rpx;
  padding: 0 8rpx;
  border-radius: 4rpx;
}

.amount {
  margin: 41rpx 0 49rpx 0;
  line-height: 64rpx;
  padding-right: 44rpx;
  color: #212121;
  font-size: 30rpx;
}

.amount view {
  display: inline-block;
  vertical-align: middle;
}

.amount .num {
  text-align: center;
  margin: 0 45rpx 0 25rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  box-sizing: border-box;
}

.amount .num button {
  display: inline-block;
  height: 64rpx;
  width: 64rpx;
  color: #9e9e9e;
  background-color: #f5f5f5;
  font-size: 48rpx;
  vertical-align: bottom;
  line-height: 64rpx;
}

.amount .num button.sub {
  border-right: 1rpx solid #e0e0e0;
}

.amount .num button.plus {
  border-left: 1rpx solid #e0e0e0;
}

.amount .num input {
  display: inline-block;
  width: 100rpx;
  font-size: 28rpx;
  color: #424242;
  vertical-align: bottom;
  height: 64rpx;
  line-height: 64rpx;
}

.amount .stock text {
  display: block;
  font-size: 24rpx;
  line-height: 32rpx;
  color: #515151;
}

.time {
  font-size: 24rpx;
  line-height: 40rpx;
  color: #747474;
  margin-bottom: 24rpx;
}

.more {
  height: 88rpx;
  background: #f7f7f7;
  position: relative;
}

.more::after{
  display: block;
  content: '';
  height: 1rpx;
  background: #e0e0e0;
  width: 590rpx;
  position: absolute; 
  top: 44rpx;
  left: 0;
  right: 0;
  margin: auto; 
  z-index: 0;
}

.more text {
  position: absolute;
  display: block;
  font-size: 24rpx;
  color: #bdbdbd;
  background: #f7f7f7;
  line-height: 88rpx;
  text-align: center;
  z-index: 1;
  width: 190rpx;
  height: 88rpx;
  top: 0;
  left: 280rpx;
}

button.convert{
  width: 100%;
  position: fixed;
  bottom: 0;
  height: 96rpx;
  text-align: center;
  color: #fff;
  background: #fb1438;
  z-index: 99;
}

button.convert.disabled{
    background: #999;
}


@import "../../style/common.wxss";
