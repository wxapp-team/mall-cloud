/* pages/grouplist/grouplist.wxss */

view, scroll-view {
    box-sizing: border-box;
}

.group-list{
    background: #fff;
}
.group-list .group-item {
    position: relative;
    margin-bottom: 16rpx;
    padding-bottom: 24rpx;
}

.group-list .thumb {
    position: relative;
    width: 100%;
    overflow: hidden;
}

.group-list .mask{
    position: absolute;
    width: 100%;
    height: 100%;
    text-align: center;
    line-height: 460rpx;
    color: #fff;
    background: rgba(0,0,0,.6);
    font-size: 48rpx;
}

.group-list .thumb .hmui-img-full {
    padding-top: 62.5%;
}

.group-list .hmui-img-full image {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 100%;
    height: 100%;
    -webkit-transform: translate(-50%, -50%);
    transform: translate(-50%, -50%);
}

.group-list .price {
    margin: 18rpx 24rpx 8rpx;
    color: #fb1438;
    font-size: 38rpx;
}

.group-list .merge-price {
    display: inline-block;
    margin-right: 32rpx;
    font-weight: bold;
}

.group-list .merge-price .icon {
    font-size: 28rpx;
    display: inline-block;
    color: #ff1951;
    margin-right: 8rpx;
    font-weight: normal;
}
.group-list .merge-price text{
    font-size: 28rpx;
}

.group-list .old-price {
    font-size: 24rpx;
    color: #9d9c9c;
    text-decoration: line-through;
    display: inline-block;
}

.group-list .name {
    line-height: 36rpx;
    font-size: 28rpx;
    color: #030e21;
    margin: 0 24rpx;
}

.group-list .merge-size {
    position: absolute;
    top: 20rpx;
    background: #ff1f30;
    border-radius: 0 48rpx 48rpx 0;
    color: #fff;
    font-size: 18rpx;
    line-height: 48rpx;
    padding: 0 32rpx 0 16rpx;
}

.group-list .merge-size view {
    font-size: 26rpx;
    margin-right: 4rpx;
    display: inline-block;
    font-weight: bold;
}
