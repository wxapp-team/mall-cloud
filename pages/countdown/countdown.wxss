.page-section {
    font-size: 28rpx;
    overflow: hidden;
}

.bg-white {
    background: #fff;
}

.countdown-banner {
    width: 100%;
    height: 160rpx;
    overflow: hidden;
}

.countdown-banner image {
    display: inline;
}

.countdown-list {
    padding-top: 24rpx;
}

.countdown {
    padding: 30rpx 24rpx 30rpx 0;
    margin-left: 24rpx;
    border-bottom: 1rpx solid #f0f0f0;
    overflow: hidden;
}

.countdown .info {
    display: flex;
    flex-direction: row;
}

.countdown-info-pic {
    float: left;
    width: 144rpx;
    height: 144rpx;
    overflow: hidden;
}

.countdown-info-pic image {
    width: 144rpx;
    height: 144rpx;
}

.countdow-info-txt {
    float: right;
    overflow: hidden;
    margin-left: 16rpx;
    flex: 1;
}

.countdow-info-name {
    height: 80rpx;
    line-height: 40rpx;
    display: inline-block;
    word-break: break-all;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.countdow-info-b {
    margin-top: 8rpx;
    overflow: hidden;
    height: 56rpx;
    line-height: 56rpx;
}

.saleprice {
    float: left;
    color: #fb1438;
}

.saleprice .price {
    display: inline-block;
    font-size: 28rpx;
}

.saleprice .price text {
    font-size: 32rpx;
}

.saleprice .oldprice {
    display: inline-block;
    font-size: 24rpx;
    color: #bdbdbd;
    font-weight: 0;
    text-decoration: line-through;
    margin-left: 14rpx;
    vertical-align: bottom;
}

.countdown-btn {
    float: right;
    width: 160rpx;
    height: 56rpx;
    text-align: center;
    border-radius: 8rpx;
    color: #fff;
    background: -webkit-linear-gradient(left, #fb1438, #f33); /* Safari 5.1 - 6.0 */
    background: -o-linear-gradient(right, #fb1438, #f33); /* Opera 11.1 - 12.0 */
    background: -moz-linear-gradient(right, #fb1438, #f33); /* Firefox 3.6 - 15 */
    background: linear-gradient(to right, #fb1438, #f33);
}

.countdow-start {
    background: -webkit-linear-gradient(left, #03a9f4, #0288d1); /* Safari 5.1 - 6.0 */
    background: -o-linear-gradient(right, #03a9f4, #0288d1); /* Opera 11.1 - 12.0 */
    background: -moz-linear-gradient(right, #03a9f4, #0288d1); /* Firefox 3.6 - 15 */
    background: linear-gradient(to right, #03a9f4, #0288d1);
}
.tab{
	display: flex;
	flex-direction: column;
}
.tab-nav{
	height: 80rpx;
	background: #fff;
	border-bottom: 0.5rpx dotted #ddd;
	display: flex;
	line-height: 79rpx;
	position: relative;
}
 
.tab-line{
	position: absolute;
	left: 0;
	bottom: -1rpx;
	height: 4rpx;
	background: #f7982a;
	transition: all 0.3s;
}
.tab-content{
	flex: 1;
	overflow-y: auto;
	overflow-x: hidden;
}
 