/* pages/address/address.wxss */

page {
    background: #f5f5f5;
}

.address-content {
    padding-bottom: 130rpx;
}

.addresslist {
    background: #fff;
    margin: 24rpx 24rpx 0 24rpx;
    position: relative;
    border-radius: 8rpx;
}

.addressname, .addresscont {
    display: flex;
    color: #212121;
    padding: 0 24rpx;
}

.addressmor {
    padding: 24rpx 0;
}

.addressname {
    padding: 24rpx 24rpx 8rpx 24rpx;
}

.addressnamel {
    line-height: 48rpx;
    font-size: 32rpx;
    color: #212121;
}

.addressnamer {
    text-align: right;
}

.addresscont {
    padding-bottom: 24rpx;
    font-size: 28rpx;
    line-height: 36rpx;
    color: #747474;
}

.addressnamel {
    float: left;
}

.addAddr {
    margin-top: 20rpx;
    position: fixed;
    bottom: 0;
    left: 0;
    color: #03a9f4;
    width: 100%;
    line-height: 48rpx;
    font-size: 32rpx;
    padding: 24rpx;
    text-align: center;
    background-color: #fff;
}

.addAddr .iconfont {
    font-size: 48rpx;
    margin-right: 18rpx;
    position: relative;
    top: 6rpx;
}

.btmbg {
    position: fixed;
    height: 100%;
    width: 100%;
    background: #000;
    zoom: 1;
    top: 0;
    left: 0;
    opacity: 0.3;
}

.tanchu {
    position: fixed;
    top: 310rpx;
    z-index: 2;
    width: 620rpx;
    left: 60rpx;
    border-radius: 20rpx;
    background: #fff;
}

.queshac {
    display: flex;
    border-top: 1rpx solid #ddd;
}

.queshac button {
    width: 50%;
    background: #ddd;
}

.quedsccon {
    padding: 50rpx 40rpx;
}

.queshac button::after {
    display: none;
}

.queshac button.queding {
    background: #fff;
}

.addressmor {
    overflow: hidden;
    position: relative;
}

.addressmor .fl {
    width: 50%;
    color: #747474;
    text-align: center;
}

.addressmor .space-line {
    position: absolute;
    left: 50%;
    top: 28rpx;
    height: 32rpx;
    margin: 0;
    border-left: 1rpx solid #f0f0f0;
}

.disabled .title {
    margin-top:24rpx;
    line-height:40rpx;
    text-align:left;
    font-size:28rpx;
    color:#515151;
    padding-left:24rpx;
}

.disabled .addressnamel {
    color: #a3a3a3;
}

.disabled .addresscont {
    color: #bcbcbc;
}
.addr-con {
    padding-right: 136rpx;
    position: relative;
    border-bottom: 1rpx solid #f0f0f0;
}

.addr-con .toUpdate {
    height: 72rpx;
    color: #2196f3;
    text-align: center;
    position: absolute;
    right: 28rpx;
    top: 50%;
    margin-top: -36rpx;
}

.addr-con .toUpdate .h6 {
    font-size: 22rpx;
    color: #2196f3;
    line-height: 1;
    margin-top: 0;
}

.addr-con .toUpdate image {
    display: inline-block;
    width: 32rpx;
    height: 32rpx;
}

.addr-con .hide{
  display: none;
}