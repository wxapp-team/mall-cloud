/* pages/grouporder/grouporder.wxss */

view, scroll-view {
    box-sizing: border-box;
}

.merge-personal {
    padding-bottom: 0;
}

.merge-personal .list {
    position: relative;
    margin-bottom: 24rpx;
    background-color: #fff;
}

.merge-personal .list:last-child {
    margin-bottom: 0;
}

.merge-personal-hd {
    display: -webkit-box;
    display: -moz-box;
    display: -ms-flexbox;
    display: -webkit-flex;
    display: flex;
    padding: 24rpx;
    background-color: #fff;
}

.merge-personal-hd .thumb {
    position: relative;
    width: 140rpx;
    height: 140rpx;
    overflow: hidden;
    background-color: #f5f7f6;
}

.merge-personal-hd .thumb image {
    height: 100%;
    width: 100%;
}

.merge-personal-hd .info {
    -webkit-box-flex: 1;
    -moz-box-flex: 1;
    -ms-flex: 1;
    -webkit-flex: 1;
    flex: 1;
    margin-left: 16rpx;
}

.merge-personal-hd .name {
    display: -webkit-box;
    display: -moz-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    margin: 0 0 24rpx;
    font-size: 28rpx;
    line-height: 34rpx;
    height: 32rpx;
    color: #030e21;
    overflow: hidden;
    text-overflow: ellipsis;
}

.merge-personal-hd .price {
    margin-bottom: 24rpx;
    font-size: 24rpx;
    color: #343434;
}

.merge-personal-hd .price view {
    font-weight: bold;
    font-size: 24rpx;
    color: #fb1438;
    display: inline-block;
}

.merge-personal-hd .price .unit {
    font-size: 20rpx;
    margin-left: 16rpx;
}

.merge-personal-hd .time {
    font-size: 24rpx;
    color: #9a9a9a;
}

.personal-list-bd .avatar-group .user:first-child:before, .merge-over-sign,.merge-fail-sign, .merge-success-sign {
    background: url(http://demo.himall.kuaidiantong.cn/Areas/Mobile/Templates/Default/images/merge.png) no-repeat;
    background-size: 640rpx 440rpx;
}

.merge-personal-hd .time > view {
    position: relative;
    margin-right: 24rpx;
    color: #323943;
    display: inline-block;
}
.merge-personal-hd .time .iconfont{
    font-size: 26rpx;
    margin-right: 8rpx;
}

.personal-list-bd {
    padding: 0 24rpx;
}

.personal-list-bd .avatar-group {
    display: -webkit-box;
    display: -moz-box;
    display: -ms-flexbox;
    display: -webkit-flex;
    display: flex;
    -webkit-flex-wrap: wrap;
    flex-wrap: wrap;
    -webkit-align-items: flex-start;
    align-items: flex-start;
    margin: 24rpx 0;
}

.personal-list-bd .user {
    position: relative;
    margin-bottom: 12rpx;
    text-align: center;
    margin-right: 20rpx;
}

.personal-list-bd .avatar {
    width: 80rpx;
    height: 80rpx;
    overflow: hidden;
    border: 3rpx solid transparent;
    border-radius: 100%;
}

.personal-list-bd .avatar image {
    width: 100%;
    height: 100%;
}

.personal-list-bd .user:first-child .avatar {
    border-color: #ffc015;
}

.personal-list-bd .avatar-group .user:first-child:before {
    position: absolute;
    top: -19rpx;
    left: 21rpx;
    width: 48rpx;
    height: 26rpx;
    content: '';
    background-position: -150rpx -348rpx;
}

.personal-list-ft {
    padding: 34rpx 24rpx 28rpx;
    border-top: 1rpx solid #eaeaea;
    text-align: right;
}

.personal-list-ft .btn {
    margin-left: 24rpx;
    font-size: 28rpx;
    display: inline-block;
    border: 1rpx solid #fb1438;
    padding: 12rpx 24rpx;
    border-radius: 6rpx;
}

.personal-list-ft .btn-default {
    color: #fb1438;
    border-color: #d50014;
}

.personal-list-ft .btn-danger {
    background-color: #fb1438;
    border-color: #fb1438;
    color: #fff;
}

.merge-do-tip {
    padding: 30rpx 0 24rpx;
    font-size: 26rpx;
    font-weight: bold;
    color: #494e52;
    letter-spacing: 1rpx;
}
.merge-do-tip view{
    display: inline-block;
}

.merge-do-tip .merge-highlight{
    color: #3cbcba;
    margin: 0 8rpx;
}

.merge-over-sign, .merge-fail-sign, .merge-success-sign {
    position: absolute;
    z-index: 1;
    width: 192rpx;
    height: 192rpx;
    top: 32rpx;
    right: 32rpx;
}

.merge-over-sign {
    background-position: -320rpx 0;
}

.merge-fail-sign {
    background-position: -8rpx 0;
}

.merge-success-sign {
    background-position: -450rpx 0;
}

.merge-empty{
    position: fixed;
    width: 100%;
    top: 0;
    bottom: 0;
    left: 0;
    background: #fff;
    text-align: center
}
.merge-empty image{
    margin: 0 auto;
    height: 580rpx;
    width: 500rpx;
}
.merge-empty .p{
    margin-top: 48rpx;
    color: #6b6c6e;
}

.merge-empty .btn{
    background: #fb1438;
    color: #fff;
    border-radius: 12rpx;
    box-shadow: 0px 2px 2px rgba(240, 120, 129, .5);
    padding: 16rpx 64rpx;
    margin-top: 48rpx;
    display: inline-block;
    font-size: 32rpx;
}
