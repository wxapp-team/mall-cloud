/**home.wxss**/

page {
    background: #f0f0f0;
}

.w22p {
    width: 22% !important;
}

.search-box {
    height: 64rpx;
    padding: 0 24rpx 17rpx 24rpx;
    background-color: #fb1438;
    color: #fff;
}

.locate {
    width: 302rpx;
    height: 64rpx;
    line-height: 64rpx;
    border-radius: 32rpx;
    background-color: #b8001c;
    font-size: 28rpx;
    margin-right: 24rpx;
    float: left;
    padding: 0 34rpx 0 56rpx;
    box-sizing: border-box;
    position: relative;
    color: #fff;
}

.locate .location {
    width: 100%;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    display: inline-block;
}

.locate .icon-locationempty {
    width: 32rpx;
    margin-right: 16rpx;
    position: absolute;
    left: 17rpx;
    top: 0;
}

.locate .icon-right {
    font-size: 16rpx;
    width: 16rpx;
    position: absolute;
    right: 17rpx;
    top: 0;
}

.search {
    width: 376rpx;
    height: 64rpx;
    line-height: 64rpx;
    border-radius: 32rpx;
    background-color: #e00022;
    font-size: 28rpx;
    float: left;
    padding: 0 17rpx;
    box-sizing: border-box;
}

.search text.text {
    height: 64rpx;
    line-height: 64rpx;
}

.search .icon-searchempty {
    margin-right: 16rpx;
    float: left;
    color: #fff;
}

.ads-swiper {
    width: 100%;
    height: 327rpx;
}

.ads-swiper image {
    width: 100%;
    height: 100%;
}

.fast-nav {
    height: 224rpx;
    padding: 32rpx 0;
    box-sizing: border-box;
    white-space: nowrap;
}

.fast-nav .scroll-view-item {
    width: 25%;
    height: 160rpx;
    vertical-align: top;
    font-size: 24rpx;
    color: #515151;
    text-align: center;
    display: inline-block;
}

.fast-nav .scroll-view-item image {
    width: 120rpx;
    height: 120rpx;
    display: inline-block;
}

.fast-nav .scroll-view-item text {
    display: block;
}

.store-container {
    margin-top: 24rpx;
    padding: 0 24rpx;
}

.store-container .title {
    padding: 24rpx 0;
    font-size: 36rpx;
    font-weight: bold;
}

.index-topic {
    margin-top: 24rpx;
    margin-bottom: 24rpx;
    height: 480rpx;
    background-color: #fff;
}

.index-topic .t-left {
    height: 100%;
    width: 42%;
    box-sizing: border-box;
    border-right: 1rpx solid #f0f0f0;
    float: left;
}

.index-topic .t-right {
    height: 100%;
    width: 58%;
    float: left;
}

.index-topic .t-top {
    box-sizing: border-box;
    border-bottom: 1rpx solid #f0f0f0;
}

.index-topic .t-top, .index-topic .t-bottom {
    height: 50%;
    display: flex;
}

.index-topic .t-top image:first-child, .index-topic .t-bottom image:first-child {
    border-right: 1rpx solid #f0f0f0;
}

.index-topic .t-top image, .index-topic .t-bottom image {
    box-sizing: border-box;
    width: 50%;
    height: 100%;
}

.middle-swiper {
    width: 100%;
    height: 216rpx;
}

.middle-swiper image {
    width: 100%;
    height: 100%;
}

.no-locate {
    width: 100%;
    padding: 88rpx 0;
    text-align: center;
}

.no-locate image {
    width: 144rpx;
    height: 144rpx;
    display: block;
    margin: auto;
    margin-bottom: 16rpx;
}

.no-locate text {
    font-size: 28rpx;
    color: #747474;
}

.no-locate button {
    width: 170rpx;
    height: 66rpx;
    line-height: 66rpx;
    margin-top: 16rpx;
    font-size: 28rpx;
    background-color: #fb1438;
    border-radius: 36rpx;
}
