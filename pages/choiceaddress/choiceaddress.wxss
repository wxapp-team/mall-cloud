/* pages/xaddress/xaddress.wxss */
page{background: #f5f5f5; padding-bottom: 105rpx;}
.addresslist{background: #fff; position: relative;}
.addressname,.addresscont,.addressmor{overflow: hidden; padding-left: 0rpx; padding-right: 50rpx;}
.addressnamel{width: 350rpx; line-height: 48rpx; font-size: 32rpx}

 .addresscont{ padding-bottom: 24rpx; font-size: 28rpx; line-height: 40rpx;}
.addressmorr{width: 44rpx; height: 44rpx; float: right;}
 
 
.btmbg{position: fixed;height: 100%; width: 100%;background: #000; zoom: 1;top: 0;left:0; opacity: 0.3;}
.tanchu{position: fixed;top:310rpx; z-index: 2;width: 620rpx;left: 60rpx;border-radius: 20rpx;background: #fff;}
.queshac{display: flex;border-top: 1px solid #ddd;}
.queshac button{width: 50%; background: #dddddd;}
.quedsccon{padding: 50rpx 40rpx;}
.queshac button::after{display: none;}
.queshac button.queding{background: #fff}
.addressmorl{float:left;}
.addressmorl text{color: #212121; font-size: 28rpx; line-height: 40rpx; padding-top: 8rpx; padding-left:8rpx}

.addr-con {
    padding-right: 136rpx;
    position: relative;
    border-bottom: 1rpx solid #ddd;
}

.addr-con .toUpdate {
    height: 72rpx;
    color: #2196f3;
    text-align: center;
    position: absolute;
    right: 28rpx;
    top: 50%;
    margin-top: -36rpx;
}

.addr-con .toUpdate .h6 {
    font-size: 22rpx;
    color: #2196f3;
    line-height: 1;
    margin-top: 0;
}

.addr-con .toUpdate image {
    display: inline-block;
    width: 32rpx;
    height: 32rpx;
}
.right_icon {
    position:absolute;
    right:0;
    top:50%;
    color:#9e9e9e;
    font-size:22rpx;
    width:24rpx;
    height:24rpx;
    margin-top:-12rpx;
}

.addr-con .hide{
  display: none;
}