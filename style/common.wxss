page{
  background: #f7f7f7;
}

swiper .slide-image{
    height: 100%;
    width: 100%;
}

.no_data image{
  width: 200rpx;
  height: 200rpx;
  margin: 64rpx auto 32rpx;
}

.no_data view.title{
  font-size: 32rpx;
  text-align: center;
  line-height: 48rpx;
  font-weight: bold;
  color: #212121;
}

.no_data view.des{
  font-size: 28rpx;
  text-align: center;
  line-height: 40rpx;
  color: #515151;
  margin-top: 8rpx;
}

button{
  padding-left: 0;
  padding-right: 0;
  border-radius: 0;
}

button::after{
  border: none;
}

.gotop {
  position: fixed;
  height: 80rpx;
  width: 80rpx;
  border-radius: 50%;
  border: 1rpx solid #f0f0f0;
  box-sizing: border-box;
  text-align: center;
  bottom: 48rpx;
  right: 24rpx;
  background: #fff;
}

.gotop .icon-gotop {
  color: #232323;
  font-size: 42rpx;
  line-height: 80rpx;
}

.webkit_box{
  display: -webkit-box;
  -webkit-box-orient: vertical; 
  -webkit-line-clamp: 2; 
  overflow: hidden;
}